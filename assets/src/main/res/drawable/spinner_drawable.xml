<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/gray_border" />
                    <corners android:radius="4dp" />
                    <padding  android:right="10dp"  />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/arrow_down_grey" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/gray_disabled" />
                    <corners android:radius="4dp" />
                    <padding  android:right="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>