<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_clicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_4dp"
        android:elevation="2dp"
        android:paddingVertical="@dimen/padding_8">

        <ImageView
            android:id="@+id/iv_subject_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_hindi"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_competency"
            style="@style/text_heading_style"
            android:layout_width="@dimen/width_0dp"
            android:layout_marginStart="@dimen/spacing_14"
            android:text="competency"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/iv_subject_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>