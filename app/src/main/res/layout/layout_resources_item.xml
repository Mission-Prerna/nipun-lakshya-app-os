<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp">

        <TextView
            android:id="@+id/faq_ques_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="5dp"
            android:gravity="start"
            android:letterSpacing="0.062"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="Q1 :"

            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/faq_ques_name"
            android:background="@color/color_faq_ques_bg"
            android:elevation="@dimen/radius_4dp"
            android:gravity="start"
            android:letterSpacing="0.062"
            android:paddingHorizontal="12dp"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="questions"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp">

        <TextView
            android:id="@+id/faq_ans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:gravity="start"
            android:letterSpacing="0.062"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="A1 :"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/faq_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_toEndOf="@id/faq_ans_name"
            android:background="@color/white"
            android:elevation="@dimen/radius_4dp"
            android:gravity="start"
            android:letterSpacing="0.062"
            android:nestedScrollingEnabled="true"
            android:paddingHorizontal="@dimen/padding_12dp"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="Answers"
            android:textAllCaps="false"
            android:textColor="@color/blue_2e3192"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_14sp" />

    </RelativeLayout>

</LinearLayout>