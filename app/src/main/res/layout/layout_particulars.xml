<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_serial_no"
            style="@style/text_heading_style"
            android:layout_marginEnd="0dp"
            app:layout_constraintHorizontal_bias="0"
            android:textStyle="bold"
            android:background="@drawable/rounded_border_alternate"
            android:backgroundTint="@color/box_title_color"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="#"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_school_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_school_name"
            style="@style/text_heading_style"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/rounded_border_alternate"
            android:backgroundTint="@color/box_title_color"
            android:gravity="center"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="@string/school_information"
            android:textColor="@color/white"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_visit"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/tv_serial_no"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_visit"
            style="@style/text_heading_style"
            android:layout_marginHorizontal="0dp"
            android:background="@drawable/rounded_border_alternate"
            android:backgroundTint="@color/box_title_color"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/padding_large"
            android:paddingVertical="@dimen/padding_6dp"
            android:text="@string/visit_status"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_school_name"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>