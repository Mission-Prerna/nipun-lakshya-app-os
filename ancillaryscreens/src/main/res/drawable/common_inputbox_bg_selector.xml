<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/color_ffffff" android:startColor="@color/color_ffffff" />
            <stroke android:width="1dp" android:color="@color/inputbox_color_focused_border" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/color_ffffff" android:startColor="@color/color_ffffff" />
            <stroke android:width="1dp" android:color="@color/inputbox_color_pressed_border" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/color_ffffff" android:startColor="@color/color_ffffff" />
            <stroke android:width="1dp" android:color="@color/inputbox_color_disable_border" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/color_ffffff" android:startColor="@color/color_ffffff" />
            <stroke android:width="1dp" android:color="@color/inputbox_color_other_border" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>