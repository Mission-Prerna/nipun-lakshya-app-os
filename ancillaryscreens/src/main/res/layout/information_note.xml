<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent_info_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=".9"
        android:background="@drawable/info_note_bg">

        <TextView
            android:id="@+id/tv_info_note_title"
            style="@style/text_title_style"
            android:padding="@dimen/padding_small"
            android:text="@string/info_note"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toTopOf="@id/tv_info_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_info_note"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="10"
            android:padding="@dimen/padding_medium"
            android:scrollbars="vertical"
            android:textColor="@color/blue_2e3192"
            android:textColorLink="@color/blue_2e3192"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_note_title"
            tools:text="Lorem Ipsum is simply dummy text." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>